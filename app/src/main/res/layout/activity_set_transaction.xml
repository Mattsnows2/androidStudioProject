<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionActivity"
    android:background="@color/blue" >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/background"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextOperation"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/mettez_votre_montant" />

        <EditText
            android:id="@+id/currency"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:text="currency" />
    </LinearLayout>

    <EditText
        android:id="@+id/label"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:text="label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTypeOperation"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextTypeOperation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"


        android:text="test3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="494dp" />

    <EditText
        android:id="@+id/categories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"


        android:layout_marginTop="96dp"
        android:text="Categorie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="236dp" />

    <Button
        android:id="@+id/buttonAddOperation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="655dp" />

    <EditText
        android:id="@+id/petTransac_date_TV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>